<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.amu.iut.exercice7.CounterController">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <!-- Label lié au controller via fx:id -->
            <Label fx:id="counterLabel" text="0"/>

            <HBox alignment="CENTER" spacing="5">
                <!-- Boutons liés aux méthodes du controller -->
                <Button text="+" onAction="#increment"/>
                <Button text="−" onAction="#decrement"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
